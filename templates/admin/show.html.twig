{% extends 'base.html.twig' %}

{% block title %}Projects
{% endblock %}

{% block body %}

	<header class="mastheadAdmin d-flex align-items-center">

		<div class="container px-4 px-lg-5 text-center">

			<h1 class="mb-1"></h1>


		</div>
	</header>


	<div class="container mt-5">
		<h1>Projects</h1>

		<table class="table text-white">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ project.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ project.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ project.description }}</td>
				</tr>
				{% for projectSkills in project.projectSkills %}

					<tr>
						<th>Skills</th>
						<td>{{ projectSkills.skills.name }}</td>


					</tr>
				{% endfor %}
				{% for projectPicture in project.projectPictures %}

					<tr>
						<th>Picture</th>
						<td><img src="{{ asset('/' ~ projectPicture.picture) }}" style="width: 200px" alt=""></td>


					</tr>
				{% endfor %}
				<tr>
					<th>Link</th>
					<td>{{ project.link }}</td>
				</tr>
			</tbody>
		</tbody>
	</table>

	<a class="text-success" href="{{ path('app_admin_index') }}">
		<h5>Retour a la liste</h5>
	</a>


	<a class="text-success" href="{{ path('app_admin_edit', {'id': project.id}) }}">
		<h5>Modifier</h5>
	</a>


	{{ include('admin/_delete_form.html.twig') }}
</div>{% endblock %}
